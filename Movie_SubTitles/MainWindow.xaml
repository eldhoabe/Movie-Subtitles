<Window x:Class="Movie_SubTitles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Text="Enter your movie file path"/>
            <TextBox Margin="20,0,0,0" Grid.Column="1" x:Name="txtBxMovieName" HorizontalAlignment="Left" MinWidth="250"/>
            
            <Button 
                Margin="20,10,0,0" 
                Grid.Column="1"
                Grid.Row="1"
                x:Name="BtnSearch"
                Content="GetSubTitles"
                HorizontalAlignment="Left" Click="BtnSearch_Click"/>
        </Grid>
    </Grid>
</Window>
